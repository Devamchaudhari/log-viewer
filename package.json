{
  "name": "log-viewer-tools",
  "displayName": "log-viewer-tools",
  "description": "Custom extension to view console.log outputs grouped by file and log name directly in VS Code",
  "version": "1.1.0",
  "publisher": "DevamChaudhari",
  "engines": {
    "vscode": "^1.103.0"
  },
  "icon": "images/log-viewer-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Devamchaudhari/log-viewer.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "customLogs",
          "name": "Log Viewer",
          "icon": "images/log-viewer-icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "log-viewer.refresh",
        "title": "Refresh Log Viewer"
      },
      {
        "command": "log-viewer.generateLaunchJson",
        "title": "Create Launch.json for Debugging"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
